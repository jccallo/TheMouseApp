<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMouseApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_300</item>
        <item name="colorPrimaryVariant">@color/purple_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.TheMouseApp.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/purple_200</item>
        <item name="android:theme">@style/Theme.TheMouseApp</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="Widget.TheMouseApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.TheMouseApp.TextInputLayout.HintText</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="TextAppearance.TheMouseApp.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="TextAppearance.TheMouseApp.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">24dp</item>
    </style>
</resources>